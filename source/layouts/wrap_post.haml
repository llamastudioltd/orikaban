= wrap_layout :default do
  %article{ "aria-label": current_page.data.title, class: :post }
    - unless ['about'].include? current_page.data.hover
      %header{ class: :post__header }
        %h1{ class: :post__h1 }
          #{ current_page.data.title }.

        %div{ class: [:post_meta, 'post_meta--tags'] }
          %ul{ class: :post_meta__list }
            - current_page.tags.each do |tag|
              %li{ class: :post_meta__node }
                = tag

    %div{ class: :post__region }
      %div{ class: :copy }
        = yield