!!! 5
%html{ lang: "#{ I18n.locale }" }
  %head
    %meta{ charset: "utf-8"}
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    
    %meta{ name: "description", content: "#{ current_page.data.description }" }

    %meta{ property: "og:description", content: "#{ current_page.data.description }" }
    %meta{ property: "og:image", content: "https://llama.studio/apple-touch-icon-180x180.png" }
    %meta{ property: "og:title", content: "#{ current_page.data.title }" }
    %meta{ property: "og:url", content: "https://llama.studio#{ current_page.url }" }

    %link{ rel: "icon", href: "/favicon-16x16.png", sizes: "16x16", type: "image/png" }
    %link{ rel: "icon", href: "/favicon-32x32.png", sizes: "32x32", type: "image/png" }
    %link{ rel: "icon", href: "/favicon-96x96.png", sizes: "96x96", type: "image/png" }

    %link{ rel: "apple-touch-icon", href: "/apple-touch-icon-120x120.png" }
    %link{ rel: "apple-touch-icon", href: "/apple-touch-icon-152x152.png", sizes: "152x152" }
    %link{ rel: "apple-touch-icon", href: "/apple-touch-icon-167x167.png", sizes: "167x167" }
    %link{ rel: "apple-touch-icon", href: "/apple-touch-icon-180x180.png", sizes: "180x180" }

    = javascript_include_tag "vendor/turbolinks-5.2.0"
    = javascript_include_tag "application"

    = stylesheet_link_tag "https://use.typekit.net/bvk8xtf.css", media: "all"
    = stylesheet_link_tag "application", media: "all"

    %title
      #{ current_page.data.title } &mdash; Llama Studio

  %body{ id: :ue }
    %div{ class: :grid }
      %header{ class: :grid_header }
        %div{ class: :logo }
          %a{ class: :logo_anchor, href: "/", tabindex: 1 }
            Llama Studio            

        %nav{ "aria-label": "secondary", class: :links }
          %ul{ class: :links_list }
            %li{ class: :links_node }
              %a{ class: [:links_anchor, "#{ "hover" if [:en].include? I18n.locale }"], href: "/", tabindex: 6 }
                - if I18n.locale == :en
                  %strong En<span class="hide@mobile hide@fablet hide@tablet_portrait hide@tablet_landscape">glish</span>
                - else
                  En<span class="hide@mobile hide@fablet hide@tablet_portrait hide@tablet_landscape">glish</span>
            %li{ class: :links_node }
              %a{ class: [:links_anchor, "#{ "hover" if [:es].include? I18n.locale }"], disabled: :disabled, href: "/", tabindex: 7 }
                - if I18n.locale == :es
                  %strong Es<span class="hide@mobile hide@fablet hide@tablet_portrait hide@tablet_landscape">pañol</span>
                - else
                  Es<span class="hide@mobile hide@fablet hide@tablet_portrait hide@tablet_landscape">pañol</span>

      %main{ class: :grid_body }
        %div{ class: :main }
          = yield

      %div{ class: :grid_menu }
        %nav{ "aria-label": "primary", class: [:links, "links-columns@mobile", "links-columns@fablet", "links-rows@tablet_portrait", "links-rows@tablet_landscape", "links-rows@laptop", "links-rows@cinema"]}
          %ul{ class: :links_list }
            %li{ class: :links_node }
              %a{ class: [:links_anchor, "#{ "hover" if ["about"].include? current_page.data.hover }"], href: "/about/", tabindex: 2 }
                - if current_page.data.hover == "about"
                  %strong Information
                - else
                  Information
            %li{ class: :links_node }
              %a{ class: [:links_anchor, "#{ "links_anchor-over" if ["contact"].include? current_page.data.hover }"], href: "mailto:hey@llama.studio?subject=Hey Llama%20Studio!", tabindex: 3 }
                - if current_page.data.hover == "contact"
                  %strong Get in Touch
                - else
                  Get in Touch

          %ul{ class: :links_list }
            %li{ class: :links_node }
              %a{ class: :links_anchor, href: "https://www.linkedin.com/company/llama-studio-ltd/", tabindex: 4 }
                LinkedIn
            %li{ class: :links_node }
              %a{ class: :links_anchor, href: "https://twitter.com/llamastudioltd/", tabindex: 5 }
                Twitter

      %div{ class: :grid_meta }
        %div{ class: [:links, "links-columns@mobile", "links-columns@fablet", "links-rows@tablet_portrait", "links-rows@tablet_landscape", "links-rows@laptop", "links-rows@cinema"]}
          %ul{ class: :links_list }
            %li{ class: :links_node }
              %data{ rel: :london, value: "51°30'26.359\"N 00°07'39.530\"W" }
                51°30'<span class="hide@tablet_portrait hide@tablet_landscape">26.359"</span>N 00°07"<span class="hide@tablet_portrait hide@tablet_landscape">39.530"</span>W
            %li{ class: :links_node }
              %data{ rel: :valencia, value: "39°28'11.645\"N 00°22'33.424\"E" }
                39°28'<span class="hide@tablet_portrait hide@tablet_landscape">11.645"</span>N 00°22'<span class="hide@tablet_portrait hide@tablet_landscape">33.424"</span>E

      %footer{ class: :grid_footer }
        %nav{ class: [:links, "links-columns@mobile", "links-columns@fablet"] }
          %ul{ class: :links_list }
            %li{ class: :links_node }
              &copy; Llama Studio Ltd., #{ Time.new.strftime("%Y") }
            %li{ class: :links_node }
              %a{ class: :links_anchor, href: "#ue" }
                Skip to Top