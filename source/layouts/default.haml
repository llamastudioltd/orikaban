!!! 5
%html{ data: { theme: :dark }, lang: "en-gb" }
  %head
    %meta{ charset: "utf-8"}
    %meta{ content: "width=device-width, initial-scale=1.0", name: "viewport" }

    %meta{ name: "author", content: "Llama Studio Ltd." }
    %meta{ name: "description", content: "#{ current_page.data.description }" }

    %meta{ name: "robots", content: "index,follow" }
    %meta{ name: "googlebot", content: "index,follow" }
    %meta{ name: "twitter:dnt", content: "on" }

    %meta{ name: "generator", content: "middleman" }

    %meta{ property: "og:type", content: "article" }
    %meta{ property: "og:description", content: "#{ current_page.data.description }" }
    %meta{ property: "og:image", content: "https://llama.studio#{ current_page.url }meta.png" }
    %meta{ property: "og:image:alt", content: "Cover image for this page" }
    %meta{ property: "og:title", content: "#{ current_page.data.title }" }
    %meta{ property: "og:url", content: "https://llama.studio#{ current_page.url }" }

    %meta{ name: "twitter:card", content: "summary" }
    %meta{ name: "twitter:description", content: "#{ current_page.data.description }" }
    %meta{ name: "twitter:image", content: "https://llama.studio#{ current_page.url }meta.png" }
    %meta{ name: "twitter:title", content: "#{ current_page.data.title }" }
    %meta{ name: "twitter:url", content: "https://llama.studio#{ current_page.url }" }

    %link{ href: "https://llama.studio/apple-touch-icon.png", rel: "apple-touch-icon", sizes: "180x180", type: "image/png" }
    %link{ href: "https://llama.studio/favicon-32x32.png", rel: "icon", sizes: "32x32", type: "image/png" }
    %link{ href: "https://llama.studio/favicon-16x16.png", rel: "icon", sizes: "16x16", type: "image/png" }
    %link{ href: "https://llama.studio/icon.png", rel: "icon", sizes: "192x192", type: "image/png" }

    %link{ color:"#000000", href: "/safari-pinned-tab.svg", rel: "mask-icon" }
    
    = javascript_include_tag 'vendor/turbolinks-5.2.0'

    = stylesheet_link_tag "https://use.typekit.net/bvk8xtf.css", media: "all"
    = stylesheet_link_tag "application", media: "all"

    %title
      #{ current_page.data.title } &mdash; Llama Studio

  %body{ id: :ue }
    %header{ class: :site_header_area }
      %div{ class: :site_header_area__region }
        %a{ class: :logo, href: '/' }
          Llama Studio

      %div{ class: :site_header_area__region }
        %menu{ class: :menu }
          %ul{ class: :menu__list }
            %li{ class: :menu__node }
              %a{ class: [:menu__link, 'hover'], href: '/' }
                %strong En<span class="hide@fablet hide@tablet_portrait">glish</span>

            %li{ class: :menu__node }
              %a{ class: :menu__link, disabled: true, href: '/' }
                Es<span class="hide@fablet hide@tablet_portrait">pa√±ol</span>

    %main{ class: :site_main_area }
      = yield

    %nav{ class: :site_menu_area }
      %div{ class: :site_menu_area__region }
        %menu{ class: [:menu, 'menu--cols@mobile', 'menu--rows@fablet', 'menu--rows@tablet_portrait', 'menu--rows@tablet_landscape', 'menu--rows@laptop', 'menu--rows@cinema'] }
          %ul{ class: :menu__list }
            %li{ class: :menu__node }
              %a{ class: [:menu__link, "#{ "hover" if ["index"].include? current_page.data.hover }"], href: '/' }
                - if current_page.data.hover == "index"
                  %strong Work
                - else
                  Work

            %li{ class: :menu__node }
              %a{ class: [:menu__link, "#{ "hover" if ["about"].include? current_page.data.hover }"], href: url_for('about') }
                - if current_page.data.hover == "about"
                  %strong About
                - else
                  About

            %li{ class: :menu__node }
              %a{ class: [:menu__link, "#{ "hover" if ["contact"].include? current_page.data.hover }"], href: 'mailto:hey@llama.studio?subject=Hey%20Llama%20Studio!' }
                - if current_page.data.hover == "contact"
                  %strong Contact
                - else
                  Contact

    %footer{ class: :site_footer_area }
      %div{ class: :site_footer_area__region }
        %menu{ class: [:menu, 'menu--cols@mobile'] }
          %ul{ class: :menu__list }
            %li{ class: :menu__node }
              %a{ class: :menu__link, href: 'https://www.linkedin.com/company/llama-studio-ltd/' }
                LinkedIn

            %li{ class: :menu__node }
              %a{ class: :menu__link, href: 'https://medium.com/llama-studio' }
                Medium

            %li{ class: :menu__node }
              %a{ class: :menu__link, href: 'https://twitter.com/llamastudioltd' }
                Twitter

      %menu{ class: :site_footer_area__region }
        %ul{ class: :menu__list }
          %li{ class: :menu__node }
            %span{ class: :menu__text }
              &copy; Llama Studio Ltd., 2016&thinsp;&mdash;&thinsp;#{ Time.new.strftime("%Y") }.

    %script{ async: true, defer: true, src: "https://scripts.simpleanalyticscdn.com/latest.js" }
    %noscript
      %img { src: "https://queue.simpleanalyticscdn.com/noscript.gif" alt: "" }